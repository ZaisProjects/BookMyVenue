<% if(Array.isArray(success) && success.length) {%> 
<div class="alert alert-success alert-dismissible fade show flash-msg col-8 offset-2" role="alert">
  <%= success %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if(Array.isArray(error) && error.length) {%> 
<div class="alert alert-danger alert-dismissible fade show flash-msg col-8 offset-2" role="alert">
  <%= error %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<!-- success is an Array,, So empty array always exist -->

