<% layout('/layouts/boilerplate') %>
<body>
  <header class="hero-section d-flex align-items-center justify-content-center text-center position-relative">
    <div class="container-fluid g-0 w-100">
      <div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="3000" data-bs-pause="false">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>

        <div class="carousel-inner">
          <!-- Slide 1 -->
          <div class="carousel-item active">
            <img src="https://res.cloudinary.com/dvhrv6r7k/image/upload/v1753400874/wedding_ezsscv.jpg" class="d-block w-100"   alt="Weddings">
            <div class="carousel-caption d-none d-md-block">
              <h1><b>Find Your Perfect </b> <b style="color: red;"> VENUE</b></h1>
              <h3 style="color: #fb8252;">Weddings Venue</h3>
              <h5>Find the perfect setting for your big day</h5>
            </div>
          </div>
          <!-- Slide 2 -->
          <div class="carousel-item">
            <img src="https://res.cloudinary.com/dvhrv6r7k/image/upload/v1753400872/hotel_cird3e.jpg" class="d-block w-100" alt="Hotels">
            <div class="carousel-caption d-none d-md-block">
              <h1><b>Find Your Perfect </b> <b style="color: red;"> VENUE</b></h1>
              <h3 style="color: #4DB6AC">Hotels & Resorts</h3>
              <h5>Enjoy a luxurious stay at premium hotels.</h5>
            </div>
          </div>
          <!-- Slide 3 -->
          <div class="carousel-item">
            <img src="https://res.cloudinary.com/dvhrv6r7k/image/upload/v1753400871/events_ietjta.jpg" class="d-block w-100" alt="Events">
            <div class="carousel-caption d-none d-md-block">
                <h1><b>Find Your Perfect </b> <b style="color: red;"> VENUE</b></h1>
              <h3 style="color: #d20b9d;">Events & Parties</h3>
              <h5>Book amazing venues for your celebrations.</h5>
            </div>
          </div>
          <!-- Slide 4 -->
          <div class="carousel-item">
            <img src="https://res.cloudinary.com/dvhrv6r7k/image/upload/v1753400873/meeting_hqzi30.jpg" class="d-block w-100" alt="Meetings">
            <div class="carousel-caption d-none d-md-block">
            <h1><b>Find Your Perfect </b> <b style="color: red;"> VENUE</b></h1>
              <h3 style="color:#55a75b">Business Meetings</h3>
              <h5>Professional spaces for conferences and more.</h5>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Search Box (placed inside hero) -->
    <div class="hero-search-box position-absolute top-50 start-50 translate-middle w-100 px-3 mt-5">
      <div class="search-glassmorphic-box mx-auto p-4 shadow">
        <!-- Search Input -->
        <form action="/listings/search" method="GET">
          <div class="input-group input-group-lg mb-3">
            <input
              type="text"
              name="q"
              class="form-control rounded-start-pill"
              placeholder="Search Venue By..."
            />
            <button class="btn btn-primary rounded-end-pill" type="submit">
             <i class="fa-solid fa-magnifying-glass-location"></i>
            </button>
          </div>
        </form>

        <!-- Category Buttons -->
        <div class="d-flex justify-content-center flex-wrap gap-2">
            <button class="btn btn-outline-light category-btn active" data-category="0">
                <i class="fa-solid fa-heart"></i> Weddings
            </button>
            <button class="btn btn-outline-light category-btn" data-category="1">
                <i class="fa-solid fa-hotel"></i> Hotels
            </button>
            <button class="btn btn-outline-light category-btn "data-category="2">
                <i class="fa-solid fa-calendar-day"></i> Events
            </button>
            <button class="btn btn-outline-light category-btn"data-category="3">
                <i class="fa-solid fa-people-group"></i> Meetings
            </button>
        </div>
      </div>
    </div>
    <script src="/js/category_btn.js"></script>
  </header>
  <%- include('./home_section.ejs',{allListings,rating,allBookings}) %>
</body>
